<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel ui:field="mainPanel">
        <g:VerticalPanel>
            <g:Label text="Размер кредита (руб.)"/>
            <g:DoubleBox ui:field="amount"/>
            <g:Label text="Процентная ставка (%)"/>
            <g:DoubleBox ui:field="rate"/>
            <g:Label text="Срок кредита (мес.)"/>
            <g:IntegerBox ui:field="duration"/>
            <g:ListBox ui:field="paymentType">
                <g:item>Аннуитетный</g:item>
                <g:item>Дифференцированный</g:item>
            </g:ListBox>
            <g:Button ui:field="calc">Рассчитать</g:Button>
        </g:VerticalPanel>
    </g:HTMLPanel>

</ui:UiBinder>